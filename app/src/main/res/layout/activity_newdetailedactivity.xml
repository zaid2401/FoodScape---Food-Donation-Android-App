<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".newdetailedactivity">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/detailImage"
        android:padding="8dp"
        android:layout_gravity="center"
        android:src="@drawable/bowl_food_solid"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/dish"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="20dp"
            android:layout_marginTop="10dp"
            android:text="Dish:-"
            android:textColor="@color/lavendar"
            android:textSize="25sp"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/detailitemname"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="5dp"
            android:layout_marginTop="10dp"
            android:layout_toEndOf="@id/dish"
            android:text="Biryani"
            android:textColor="@color/lavendar"
            android:textSize="25sp"
            android:maxLines="3"/>

        <TextView
            android:id="@+id/serves"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Serves:-"
            android:textColor="@color/lavendar"
            android:textSize="25sp"
            android:layout_below="@id/dish"
            android:layout_marginStart="20dp"
            android:layout_marginTop="20dp"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/detailitemcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2"
            android:textColor="@color/lavendar"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/serves"
            android:layout_below="@id/dish"
            android:layout_marginStart="5dp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/foodcount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Person"
            android:textColor="@color/lavendar"
            android:textSize="25sp"
            android:layout_toEndOf="@id/detailitemcount"
            android:layout_below="@id/dish"
            android:layout_marginTop="20dp"
            android:layout_marginStart="5dp"
            android:maxLines="1"/>

        <TextView
            android:id="@+id/location"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Location:-"
            android:textColor="@color/lavendar"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_below="@id/serves"
            android:layout_marginStart="20dp"
            android:maxLines="1"/>
        <TextView
            android:id="@+id/detailaddress"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Maruti Mandir"
            android:textColor="@color/lavendar"
            android:textSize="25sp"
            android:layout_marginTop="20dp"
            android:layout_toEndOf="@id/location"
            android:layout_below="@id/serves"
            android:layout_marginStart="5dp"
            android:maxLines="2"/>

    </RelativeLayout>
</LinearLayout>